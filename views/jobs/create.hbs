<h1>Create new job</h1>

<form action="/create" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Job title</label>
    <input
      typeof="text" class="form-control form-control" id="title"
      name="title" value="{{job.title}}" required
    >
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input
      typeof="text" class="form-control form-control" id="description"
      name="description" value="{{job.description}}" required
    >
  </div>
  <div class="col-md-6">
        <label for="" class="form-label">Age</label>
        <input type="age" class="form-control" id="age"  name="age" value="{{job.age}}" required>
    </div>
   <div class="mb-3">
        <label for="height"  class="form-label">Height Range</label>
        <select class="form-select" aria-label="Default select role" name="height"  value="{{job.height}}" required>
            <option selected>select height range</option>
            <option value='1.40 - 1.60'>1.40 - 1.60</option>
            <option value='1.61 - 1.80'>1.61 - 1.80</option>
            <option value='+1.80'>+1.80</option>
        </select>
    </div>   
  <button type="submit" class="btn btn-primary">Submit</button>
</form>