<h2>PROFILE</h2>
<div class="row">
  <div class="col-md-6">
    <form action="/profile-set" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="image-input">Image:</label>
        <input
          type="file"
          name="image"
          id="image-input"
          class="form-control-file"
          required
        />
        <input type="text" name="existingImage" hidden id="" />
      </div>

      <div class="form-group">
        <label for="description-input">Description:</label>
        <textarea
          name="description"
          id="description-input"
          cols="30"
          rows="4"
          class="form-control"
          required
        > </textarea>
      </div>

      <div class=>
    <div class="col-md-6">
      <label for="age" class="form-label">Age range</label>
      <input class="form-control" type="number" aria-label="Select age" name="age" required></input>
      </div>

        <div class="mb-3">
            <label for="height"  class="form-label">Height Range</label>
                <select class="form-select" aria-label="Default select role" name="height" >
                    <option selected>Choose height range</option>
        <option value="-1.40">Shorter than 1.40m</option>
        <option value="1.40 - 1.60">Between 1.40m and 1.60m</option>
        <option value="1.61 - 1.80">Between 1.61m and 1.80m</option>
        <option value="+1.80">Taller than 1.80m</option>
                </select>
        </div>

        <div class="mb-3">
          <label for="gender" class="form-label">Gender</label>
          <select class="form-select" aria-label="Default select gender" name="gender" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="non-binary">Non-binary</option>
          </select>
    </div>

      <button>Update profile</button>
    </form>
  </div>
</div>