
<section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <h3 class="dark-color">Profile</h3>
                                <div class="col-md-6">
                                        <label for="" class="form-label">Age</label>
                                        <input type="age" class="form-control" id="age"  name="age" value={{user.age}} required>
                                    
                                    </div>
                                <div class="mb-3">
                                        <label for="height"  class="form-label">Height Range</label>
                                        <select class="form-select" aria-label="Default select role" name="height"  value={{user.height}} required>
                                       <option selected>select height range</option>
                                          <option value='1.40 - 1.60'>1.40 - 1.60</option>
                                            <option value='1.61 - 1.80'>1.61 - 1.80</option>
                                            <option value='+1.80'>+1.80</option>
                                        </select>
                                    </div>
                            
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                          <h1 class="text-center">{{user.firstName}}</h1>
                            <div class="text-center mb-3">
                                        {{#if imagen}}
                                     <img src="/uploads/{{imagen}}" class="rounded-circle" />
                                      {{else}}
                                      <img
                                            src="/uploads/fotoPerfil.jpg"
                                            class="rounded-circle"
                                            width="200px"
                                            height="200px"
                                        />
                                        {{/if}}
                                     </div>
                            
                                    <form
                                        action="/perfil?_csrf={{csrfToken}}"
                                         enctype="multipart/form-data"
                                        method="post"
                                    >
                                         -- <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                                        <input class="form-control mb-2" type="file" id="formFile" name="myFile" />
                                        <button class="btn btn-dark">Cambiar foto</button>
                                    </form>
                            <div class="mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea class="form-control form-control" id="description" rows="3" typeof="text" name="description" value={{user.description}} required></textarea>
                                     
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

