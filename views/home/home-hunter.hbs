<div> {{!-- flex pero en columna --}}
  <h1 class="border-bottom w-100 p-2">You're looking for...</h1>
  <section class="border-bottom-0 border-top-0 w-100 p-4">
      {{#each jobs as |job|}}
        {{#isOwner currentUser=../currentUser jobOwnerId=job.owner._id}}
              {{> jobposted job=job currentUser=../currentUser}}
      
          {{/isOwner}}
      {{else}}
        <div>
          <h1>You have no jobs posted yet</h1>
        </div>
      {{/each}}
    </section>

    <form> {{! poner el bot√≥n a la derecha abajo}}
        <a class="btn" href="/create" method="GET" action="/create">
          Create new job
        </a>
    </form>
</div>
 
 


