


<div class="card">
  <div class="card-body" style="padding-left: 50px; padding-right: 50px; background-color:white; border:none; border-radius:6px; box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px; margin-bottom:50px">
    <div class="row">
    <div class="border border-top-0 border-start-0 border-end-0 py-4">
      <div class="d-flex gap-3 align-center"> {{! centrar aqu√≠ a ver}}
        <div class="text-job-posted">
          <div class="job-title-subtitle">
            <h2 class="mb-1">{{job.title}}</h2>
            <div class="d-flex gap-3">
              <p>Gender: {{job.gender}}</p>
              <p>Age range: {{job.minAge}} - {{job.maxAge}}</p>
              <p>Height range: {{job.height}}</p>
            </div>
          </div>
          <p class="m-0">{{job.description}}</p>
        </div>
      </div>
    </div>

    <div class="d-flex align">
      {{> status apps=job.apps}}
    </div>

  </div>
      <div class="d-flex gap-1 justify-content-end">
        <form class="m-0 d-flex justify-content-end" action="/jobs/{{job.id}}/delete" method="POST">
            <button class="btn text-danger" style="background:none; border:none" type="submit">
              <i class="bi bi-trash3-fill"></i>
            </button>
        </form>
            <a class="btn btn-secondary" style="background:none; border:none" href="/jobs/{{job.id}}/edit">
              <i class="bi bi-pencil-fill"></i>
            </a>
      </div>


  </div>
</div>