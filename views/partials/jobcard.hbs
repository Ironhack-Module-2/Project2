<div
  class="card"
  style="width:500px; margin-top:30px; padding-right:16px; padding-left:24px; padding-bottom:0px; padding-top:16px; background-color:white; border:none; border-radius:6px; box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;"
>
  <div class="card-body">

    <h2 class="card-title">{{job.title}}</h2>
    {{!<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> AQUÍ LA DESCRIPCIÓN}}
    <p class="card-text">{{job.description}}</p>

    <div class="d-flex justify-content-between">
      <div class="d-flex gap-2">
        <p class="card-text">{{job.companyName}}</p>
        <p class="card-text">( {{job.location}} )</p>
      </div>
      <div class="d-flex">
        <p class="card-text" style="color:#00C49A">Published
          {{elapsedTime job.createdAt}}
          ago</p>
      </div>
    </div>
    <form
      method="POST"
      action="/jobs/{{job.id}}/application"
      style="padding-top:16px"
    >
      {{#hasApplied currentUser=currentUser job=job}}
        <button
          type="button"
          class="btn btn-primary"
          style="background-color:#7947FA; color:#f5f5f5"
        >Applied</button>
      {{else}}
        <button type="submit" class="btn btn-primary">Apply</button>
      {{/hasApplied}}
    </form>
  </div>
</div>